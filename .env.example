#Global
PORT=8000   

#Environment
NODE_ENV=
APPLICATION_NAME=

# Database
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_POOL_MIN=
DB_POOL_MAX=

#JWT
JWT_SECRET=""
JWT_EXPIRES_IN=1h

# Email Configuration
# Development (Mailpit) - No authentication needed
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_EMAIL_ADDRESS=noreply@lumbungmesari.com

# Timezone Configuration
# IMPORTANT: This affects cron job execution time and date handling
# Options: Asia/Jakarta (WIB, UTC+7), Asia/Makassar (WITA, UTC+8), Asia/Jayapura (WIT, UTC+9)
TZ=Asia/Jakarta

# Mandatory Savings Configuration
MANDATORY_SAVINGS_DEFAULT_AMOUNT=500000
SAVINGS_DEFAULT_DATE_RANGE_DAYS=30
# Cron schedule for yearly creation (12 months at once) - Default: "0 0 1 1 *" (January 1st at midnight)
MANDATORY_SAVINGS_CRON_SCHEDULE="0 0 1 1 *"
